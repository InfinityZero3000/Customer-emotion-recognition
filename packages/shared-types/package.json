{
  "name": "shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript type definitions for the customer emotion recognition system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "types",
    "typescript",
    "emotion",
    "recognition"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/node": "^22.15.19",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
